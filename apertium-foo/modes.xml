<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="foo-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="foo.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="foo-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="foo.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="foo-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="foo.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="foo.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="foo-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="foo.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-foo.foo.rlx"/>
      </program>
    </pipeline>
  </mode>

</modes>

