<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="{{languageCode}}-morph">
    <pipeline>
      <program name="lt-proc -w">
        <file name="{{languageCode}}.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="{{languageCode}}-gener">
    <pipeline>
      <program name="lt-proc -g">
        <file name="{{languageCode}}.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="{{languageCode}}-tagger">
    <pipeline>
      <program name="lt-proc -w">
        <file name="{{languageCode}}.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="{{languageCode}}.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="{{languageCode}}-disam">
    <pipeline>
      <program name="lt-proc -w">
        <file name="{{languageCode}}.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-{{languageCode}}.{{languageCode}}.rlx"/>
      </program>
    </pipeline>
  </mode>

</modes>

